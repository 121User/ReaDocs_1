<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReaDocs_1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">?alertDialogTheme</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:background">@color/purple_900</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TextMenuTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.ReaDocs_1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ReaDocs_1.DialogActionBar" parent="Theme.AppCompat.Dialog" >
        <item name="windowActionBar">true</item>
        <item name="android:background">@color/purple_900</item>
    </style>
    
    <style name="WelcomeScreen" parent="Theme.ReaDocs_1.NoActionBar">
        <item name="android:windowBackground">@drawable/welcome_screen</item>
        <item name="android:statusBarColor">@color/purple_900</item>
    </style>

    <style name="Theme.ReaDocs_1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ReaDocs_1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>