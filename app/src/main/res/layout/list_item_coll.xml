<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/fragment_buffer_margin"
    android:paddingStart="@dimen/fragment_buffer_margin"
    android:paddingEnd="@dimen/fragment_buffer_margin"
    android:paddingBottom="@dimen/fragment_buffer_margin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/fragment_horizontal_margin"
        android:paddingEnd="@dimen/fragment_horizontal_margin"
        android:paddingTop="@dimen/fragment_vertical_margin"
        android:paddingBottom="@dimen/fragment_vertical_margin"
        android:background="@color/purple_1000">

        <TextView
            android:id="@+id/tvCollName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fragment_buffer_margin"
            android:paddingBottom="@dimen/fragment_vertical_margin"
            android:textColor="@color/text_color_1"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tvQuantityDocuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_2"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>