<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/fragment_buffer_margin"
    android:paddingStart="@dimen/fragment_buffer_margin"
    android:paddingEnd="@dimen/fragment_buffer_margin"
    android:paddingBottom="@dimen/fragment_buffer_margin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/fragment_horizontal_margin"
        android:paddingEnd="@dimen/fragment_horizontal_margin"
        android:background="@color/purple_1000">

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fragment_vertical_margin"
            android:paddingBottom="@dimen/fragment_buffer_margin"
            android:textColor="@color/text_color_1"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tvFilePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_2"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvFileFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/fragment_horizontal_margin"
                android:textColor="@color/text_color_2"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_2"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/fragment_buffer_margin"
            android:paddingBottom="@dimen/fragment_buffer_margin">
            <ImageView
                android:id="@+id/ivFileFavouriteStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_favourites"
                app:tint="@color/text_color_2"/>
            <ImageView
                android:id="@+id/ivFileReadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/fragment_horizontal_margin"
                android:src="@drawable/ic_menu_read_now"
                app:tint="@color/text_color_2"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>